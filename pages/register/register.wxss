/* pages/register/register.wxss */
.login{
  width: 600rpx;
  height: 100%;
  margin: auto;
}
form{
  display: block;
  width: 100%;
  height: 100%;
  margin-top: 20rpx;
}
.icon-add{
  color: #fff;
  font-size: 100rpx;
  text-align: center;
}
.head-img{
  display: block;
  width: 200rpx;
  height: 200rpx;
  margin: 0 auto;
  position: relative;
  z-index: 2;
}
.icon-add{
  position: absolute;
  top: 50%;
  margin-top: -50rpx;
  left: 50%;
  margin-left: -50rpx;
  z-index: 1;
}
input{
  box-sizing: border-box;
  border: 1px solid #95e1d3;
  width: 600rpx;
  height: 80rpx;
  border-radius: 10rpx;
  margin: 20rpx 0;
  padding: 10rpx;
  color: #95e1d3;
  font-size: 40rpx;
}

.code-input{
  width: 400rpx;
}
.code-btn{
  font-size: 24rpx;
  line-height: 80rpx;
  color: #fff;
  background-color: #95e1d3;
  padding:0 10rpx;
}
.placeholder{
color: #95e1d3;
font-size: 40rpx;
}
.login-btn{
  background-color: #95e1d3;
  color: #fff;
}
.regis-btn{
  color: #666;
  font-size: 30rpx;
}